<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jolly.moversandpackers.Request_customer_detail">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:background="@android:color/white"
      android:layout_marginBottom="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="0.50"
        android:orientation="vertical">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="0.50"
          android:text="From"
          android:textSize="@dimen/text_size_list_item" />

      <TextView
          android:id="@+id/source_place_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="0.50"
          android:textSize="20sp"
          android:textStyle="bold"
          android:layout_marginStart="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="0.50"
        android:orientation="vertical">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="0.50"
          android:text="To"
          android:textSize="@dimen/text_size_list_item" />

      <TextView
          android:id="@+id/destination_place_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="0.50"
          android:textSize="20sp"
          android:textStyle="bold"
          android:layout_marginStart="12dp"/>
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Requested On"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/date_text_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginStart="12dp"/>
  </LinearLayout>
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_alignParentStart="true"
      android:background="@android:color/white"
      android:layout_margin="8dp"
      >
    <TextView
        android:id="@+id/Itemid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.50"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:text="Item Name"
        android:textStyle="bold"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/Quantityid"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Quantity"
        android:layout_alignParentTop="true"
        android:padding="16dp"
        android:layout_weight="0.50"
        android:textStyle="bold"
        android:textAlignment="textEnd"/>
  </LinearLayout>
  <ListView
        android:id="@+id/item_request_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="5dp"
        android:background="#BDBDBD"
        android:divider="#BDBDBD"/>

</LinearLayout>

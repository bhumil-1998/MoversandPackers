<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_transporter_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#BDBDBD"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jolly.moversandpackers.Transporter.Transporter_main"
    tools:showIn="@layout/app_bar_transporter_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:padding="8dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.50"
                android:background="@android:color/white"
                android:layout_margin="8dp">
                <Button
                    android:id="@+id/tran_main_btn_request"
                    style="@style/HomeButton"
                    android:onClick="onButtonClicker"
                    android:layout_marginTop="40dp"
                    android:text="Request"
                    android:drawableTop="@drawable/favicon"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.50"
                android:background="@android:color/white"
                android:layout_margin="8dp">
                <Button
                    android:id="@+id/trans_main_btn_quotation"
                    style="@style/HomeButton"
                    android:layout_marginTop="40dp"
                    android:drawableTop="@drawable/quotation"
                    android:onClick="onButtonClicker"
                    android:text="Quotation"
                    android:layout_height="159dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.50"
                android:background="@android:color/white"
                android:layout_margin="8dp"
                >
                <Button
                    android:id="@+id/trans_main_btn_order"
                    style="@style/HomeButton"
                    android:onClick="onButtonClicker"
                    android:layout_marginTop="40dp"
                    android:text="Order"
                    android:drawableTop="@drawable/orders"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.50"
                android:background="@android:color/white"
                android:layout_margin="8dp">
                <Button
                    android:id="@+id/trans_main_feedback_btn"
                    style="@style/HomeButton"
                    android:layout_marginTop="40dp"
                    android:drawableTop="@drawable/feedbacks"
                    android:onClick="onButtonClicker"
                    android:text="Feedback"
                    android:layout_height="159dp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>

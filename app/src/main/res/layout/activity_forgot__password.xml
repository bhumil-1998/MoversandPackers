<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgot__password"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jolly.moversandpackers.Forgot_Password">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
            android:id="@+id/User_Name_Forgot_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edit_text_margin_top"
            android:hint="User Name"/>
    </android.support.design.widget.TextInputLayout>


    <Spinner
        android:id="@+id/Sequrity_Question_Forgot_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/edit_text_margin_top"
        android:layout_alignParentStart="true" />


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/Answer_Edit_Forgot_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:inputType="textPersonName"
        android:maxLines="6"
        android:hint="Answer"
        android:layout_marginTop="@dimen/edit_text_margin_top"
        android:layout_below="@+id/Sequrity_Question_Forgot_Password"
        android:layout_alignParentStart="true" />

</android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/New_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New password"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionUnspecified"
        android:inputType="textPassword"
        android:layout_marginTop="@dimen/edit_text_margin_top"
        android:layout_below="@+id/Answer_Edit_Forgot_Password"
        android:layout_alignParentStart="true"
        android:maxLines="1"
        />
</android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/Confirm_Edit_Forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/New_Password"
        android:layout_alignParentStart="true"
        android:inputType="textPassword"
        android:layout_marginTop="@dimen/edit_text_margin_top"
        android:hint="Confirm Password"
        />
</android.support.design.widget.TextInputLayout>
    <Button
            android:id="@+id/Submit_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Check"
            android:layout_marginTop="@dimen/edit_text_margin_top"
            android:layout_below="@+id/Confirm_Edit_Forgot_password"
            />
</LinearLayout>
